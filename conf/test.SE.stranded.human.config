/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run nf-core/ramdaq -profile test,<docker/singularity>
 */

params {
  config_profile_name = 'Test profile'
  config_profile_description = 'Minimal test dataset to check pipeline function'
 
  // Limit resources so that this can run on GitHub Actions
  max_cpus = 2
  max_memory = 6.GB
  max_time = 48.h

  // Input data
  // TODO nf-core: Specify the paths to your test data on nf-core/test-datasets
  // TODO nf-core: Give any required params for the test so that command line flags are not needed
  single_end = true
  stranded = 'fr-firststrand'

  readPaths = [
    ['SRR7826708', ['https://bioinformatics.riken.jp/ramdaq_nfcore/ramdaq_test_data/human/stranded_SE/SRR7826708_1.100K.fastq.gz']],
    ['SRR7826709', ['https://bioinformatics.riken.jp/ramdaq_nfcore/ramdaq_test_data/human/stranded_SE/SRR7826709_1.100K.fastq.gz']],
    ['SRR7826710', ['https://bioinformatics.riken.jp/ramdaq_nfcore/ramdaq_test_data/human/stranded_SE/SRR7826710_1.100K.fastq.gz']],
    ['SRR7826711', ['https://bioinformatics.riken.jp/ramdaq_nfcore/ramdaq_test_data/human/stranded_SE/SRR7826711_1.100K.fastq.gz']],
    ['SRR7826712', ['https://bioinformatics.riken.jp/ramdaq_nfcore/ramdaq_test_data/human/stranded_SE/SRR7826712_1.100K.fastq.gz']],
    ['SRR7826713', ['https://bioinformatics.riken.jp/ramdaq_nfcore/ramdaq_test_data/human/stranded_SE/SRR7826713_1.100K.fastq.gz']],
    ['SRR7826714', ['https://bioinformatics.riken.jp/ramdaq_nfcore/ramdaq_test_data/human/stranded_SE/SRR7826714_1.100K.fastq.gz']],
    ['SRR7826715', ['https://bioinformatics.riken.jp/ramdaq_nfcore/ramdaq_test_data/human/stranded_SE/SRR7826715_1.100K.fastq.gz']],
  ]
  
  // Genome references
  adapter = 'https://bioinformatics.riken.jp/ramdaq_nfcore/ramdaq_annotation/human/all_sequencing_WTA_adopters.fa'
  hisat2_idx = 'https://bioinformatics.riken.jp/ramdaq_nfcore/ramdaq_annotation/human/hisat2_v220_index_GRCh38pri_ERCC.tar.gz'
  chrsize = 'https://bioinformatics.riken.jp/ramdaq_nfcore/ramdaq_annotation/human/GRCh38.primary_assembly.genome.fa.fai'
  bed = 'https://bioinformatics.riken.jp/ramdaq_nfcore/ramdaq_annotation/human/gencode.v35.primary_assembly.annotation.bed'
  gtf = 'https://bioinformatics.riken.jp/ramdaq_nfcore/ramdaq_annotation/human/gencode.v35.primary_assembly.annotation.ERCC.gtf'
}
